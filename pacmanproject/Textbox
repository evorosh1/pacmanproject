import pygame
import sys
from pygame.locals import *

class Textbox():
  def __init__(self):
    pygame.init()
    self.font = pygame.font.SysFont('Times New Roman', 20)
    pygame.display.set_caption('Press Spcaebar to start game'')
  def addText(self):
    self.screen.blit(self.font.render('Instructions : use arrows to move pacman, press q to quit', True, "lower left"))
    pygame.display.update()
  def dissapear(self)
     pass
    
